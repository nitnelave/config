[merge]
        summary = true
        tool = vimdiff
[diff]
        tool = vimdiff
[difftool]
        prompt = false
[color]
        ui = true
[log]
        decorate = full
[help]
        autocorrect = 1
[push]
        default = current
[pull]
        rebase = true
