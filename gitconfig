[alias]
        t = status
        st = status
        ri = rebase --interactive --autosquash
        d = difftool
        dm = diff master
        co = checkout
        com = checkout master
        br = branch
        df = diff
        dc = diff --cached
        ds = diff --stat
        ci = commit
        ca = commit --amend
        can = commit --amend --no-edit
        pop = stash pop
        poop = stash pop
        punch = push
        prune-all = !git remote | xargs -n 1 git remote prune
        rem = rebase master
        rim = rebase --interactive master
        edit-unmerged = "!f() { git diff --name-status --diff-filter=U | cut -f2 ; }; stty stop '' -ixoff ; nvim -p `f`"
        edit-unmerged = "!f() { git diff --name-status --diff-filter=U | cut -f2 ; }; stty stop '' -ixoff ; nvim -p '+/^\\(<<<<<<\\|>>>>>>\\|======\\)/' `f`"
        add-unmerged = "!f() { git diff --name-status --diff-filter=U | cut -f2 ; }; git add `f`"
        alias = "!sh -c '[ $# = 2 ] && git config --global alias.\"$1\" \"$2\" && exit 0 || echo \"usage: git alias <new alias> <original command>\" >&2 && exit 1' -"
        aliases = !git config --get-regexp 'alias.*' | colrm 1 6 | sed 's/[ ]/ = /'
        lg = "!f() { \
          LOG_OPTIONS=\"--graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative\"; \
          ARGS=\"$@\"; \
          if [ -z \"$ARGS\" ]; then \
            ARGS=master..; \
          fi; \
          eval git log $LOG_OPTIONS $ARGS; \
          }; f"
        lga = "!git lg --all $@"
        cont = rebase --continue
        graph = log --graph --pretty=oneline
        all = log --graph --pretty=oneline --all
        lm = "!git lga | head -n $(git lga | grep -n $(git rev-parse --short master) | cut -d : -f 1) | less"
        modified-files = "!f() { \
            LOCAL_ROOT=${2:-$GIT_PREFIX}; \
            BASE=${1:-master}; \
            if [ $(git merge-base HEAD "$BASE") = $(git rev-parse --verify "$BASE") ]; then \
              git diff --name-only "$BASE" | sed "s@^$LOCAL_ROOT@@" ; \
            else \
              echo Not based on "$BASE" >&2; \
              return 1; \
            fi }; f"
        open-modified = "!f() { \
            BASE=${1:-master}; \
            FILES=$(git modified-files $BASE $GIT_PREFIX); \
            if [ $? -eq 1 ]; then return 1; fi; \
            cd ${GIT_PREFIX:-.}; \
            $EDITOR -p $FILES; \
          }; f"

